@page
@model MovieGallery.Pages.SearchByRatingModel
@{
    ViewData["Title"] = "Search by rating";
}

<h2> Search your favourite movies and shows by rating</h2>

<div class="container">
    <div class="row mb-3">
        <form class="height d-flex justify-content-center align-items-center form-inline" action="" method="post">
            <div>
                <div class="col-md-12">
                    <div class="searchbyrating">
                        <i class="fa fa-search"></i>

                        <select name="rating" required class="dropdown1">
                            <option value="0">Select a Rating</option>
                            @foreach (var rating in Model.RatingsList)
                            {
                                <option value="@rating">@rating</option>
                            }
                        </select>
                        <button type="submit" name="searchrating" class="btn btn-secondary">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.InitialCheckList)
{
    <div id="accordion">
        <div class="card">
            <div class="card-header" id="movies">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseMovies" aria-expanded="true" aria-controls="collapseMovies">
                        IMDb Top 250 Movies
                    </button>
                </h5>
            </div>
            <div id="collapseMovies" class="collapse" aria-labelledby="movies" data-parent="#accordion">
                <div class="card-body">
                    <table class="table table-striped table-light">
                        <thead class="thead-dark">
                            <tr>
                                <th>Title</th>
                                <th>Crew</th>
                                <th>IMDb Rating</th>
                                <th>Year</th>
                                <th>Rank</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movie in Model.MoviesResult.Items)
                            {

                                <tr>
                                    <td>@movie.Title</td>
                                    <td>@movie.Crew</td>
                                    <td>@movie.ImDbRating</td>
                                    <td>@movie.Year</td>
                                    <td>@movie.Rank</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="shows">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseShows" aria-expanded="true" aria-controls="collapseShows">
                        IMDb Top 250 Shows
                    </button>
                </h5>
            </div>
            <div id="collapseShows" class="collapse" aria-labelledby="shows" data-parent="#accordion">
                <div class="card-body">
                    <table class="table table-striped table-light">
                        <thead class="thead-dark">
                            <tr>
                                <th>Title</th>
                                <th>Crew</th>
                                <th>IMDb Rating</th>
                                <th>Year</th>
                                <th>Rank</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var show in Model.ShowsResult.Items)
                            {
                                <tr>
                                    <td>@show.Title</td>
                                    <td>@show.Crew</td>
                                    <td>@show.ImDbRating</td>
                                    <td>@show.Year</td>
                                    <td>@show.Rank</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

else
{
    if (Model.SearchCompleted)
    {
        if (Model.MoviesResult.Items.Count > 0)
        {
            <h3>Movies:</h3>
            <table class="table table-striped table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Crew</th>
                        <th>Year</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.MoviesResult.Items)
                    {
                        <tr>
                            <td>@movie.Title</td>
                            <td>@movie.Crew</td>
                            <td>@movie.Year</td>
                            <td>@movie.Rank</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                No Movies Data Present for this rating
            </div>
        }
        if (Model.ShowsResult.Items.Count > 0)
        {
            <h3>Shows:</h3>
            <table class="table table-striped table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Crew</th>
                        <th>Year</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var show in Model.ShowsResult.Items)
                    {

                        <tr>
                            <td>@show.Title</td>
                            <td>@show.Crew</td>
                            <td>@show.Year</td>
                            <td>@show.Rank</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                No Shows data Present for this rating
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-info">
                    No Data Present for this rating
                </div>
            </div>
        </div>
    }
}