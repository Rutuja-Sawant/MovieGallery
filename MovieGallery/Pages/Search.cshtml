@page
@model MovieGallery.Pages.SearchModel
@{
    ViewData["Title"] = "Search";
}

<h2> Search your favourite movies and shows by year</h2>

<div class="container">
    <div class="row mb-3">
        <form class="height d-flex justify-content-center align-items-center form-inline" action="" method="get">
            <div>
                <div class="col-md-12">
                    <div class="search">
                        <i class="fa fa-search"></i>
                        <input type="text" class="form-control" placeholder="Enter year to start search..." name="SearchbyYear" id="SearchbyYear" >
                        <button type="submit" class="btn btn-secondary">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.InitialCheckList)
{

    <div id="accordion">
        <div class="card">
            <div class="card-header" id="movies">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseMovies" aria-expanded="true" aria-controls="collapseMovies">
                        IMDb Top 250 Movies
                    </button>
                </h5>
            </div>
            <div id="collapseMovies" class="collapse" aria-labelledby="movies" data-parent="#accordion">
                <div class="card-body">
                    <table class="table table-striped table-light">
                        <thead class="thead-dark">
                            <tr>
                                <th>Title</th>
                                <th>Crew</th>
                                <th>IMDb Rating</th>
                                @*<th>image</th>*@
                                <th>Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movie in Model.MoviesResult.Items)
                            {

                                <tr>
                                    <td>@movie.Title</td>
                                    <td>@movie.Crew</td>
                                    <td>@movie.ImDbRating</td>
                                    <td>@movie.Year</td>
                                    @*<td>@movie.Image</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="shows">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseShows" aria-expanded="true" aria-controls="collapseShows">
                        IMDb Top 250 Shows
                    </button>
                </h5>
            </div>
            <div id="collapseShows" class="collapse" aria-labelledby="movies" data-parent="#accordion">
                <div class="card-body">
                    <table class="table table-striped table-light">
                        <thead class="thead-dark">
                            <tr>
                                <th>Title</th>
                                <th>Crew</th>
                                <th>IMDb Rating</th>
                                @*<th>image</th>*@
                                <th>Year</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var show in Model.ShowsResult.Items)
                            {

                                <tr>
                                    <td>@show.Title</td>
                                    <td>@show.Crew</td>
                                    <td>@show.ImDbRating</td>
                                    <td>@show.Year</td>
                                    @*<td>@movie.Image</td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

else
{
    if (Model.CorrectYear)
    {
        if (Model.SearchCompleted)
        {
            <table class="table table-striped table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Crew</th>
                        <th>IMDb Rating</th>
                        @*<th>image</th>*@
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model.MoviesResult.Items)
                    {

                        <tr>
                            <td>@movie.FullTitle</td>
                            <td>@movie.Crew</td>
                            <td>@movie.ImDbRating</td>
                            <td>@movie.Type</td>
                            @*<td>@movie.Image</td>*@
                        </tr>
                    }
                </tbody>
            </table>
            <table class="table table-striped table-light">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Crew</th>
                        <th>IMDb Rating</th>
                        @*<th>image</th>*@
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var show in Model.ShowsResult.Items)
                    {

                        <tr>
                            <td>@show.FullTitle</td>
                            <td>@show.Crew</td>
                            <td>@show.ImDbRating</td>
                            <td>@show.Type</td>
                            @*<td>@movie.Image</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <div class="alert alert-info">
                        No Data Present for this year
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-info">
                    Please enter a valid year!
                </div>
            </div>
        </div>
    }
}